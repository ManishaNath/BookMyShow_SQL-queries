-- Tables involved in BookMyShow with No relations
--P1 - List down all the entities, their attributes and the table structures for the scenario 

// ##Movie Table

/*
P1: Entities, Attributes, and Table Structures

Entity Type – Movie Ticketing Platform
Entity Value –  Movie,  Theatre , Screens, Show, Seat
Attributes:
    - Movie_ID (Primary Key)
    - movie_name
    - total_time
    - Genres
    - Language
    - movie_ratings

- Theatre
  - Attributes:
    - Theatre_ID (Primary Key)
    - Theatre_Name
    - Location

- Screens
  - Attributes:
    - Screen_ID (Primary Key)
    - screen_name

- Show
  - Attributes:
    - Show_ID (Primary Key)
    - show_date
    - show_time
*/
// -- Create movie table
CREATE TABLE Movie (
movie_id INT NOT NULL AUTO_INCREMENT, 
movie_name VARCHAR(50) NOT NULL, 
total_time TIME, 
Genres VARCHAR(50), 
language VARCHAR(50), 
movie_ratings VARCHAR(50), 
PRIMARY KEY(movie_id)
 );

// ##Theater Table

// -- Create Theatre table

CREATE TABLE Theatre (
    Theatre_ID VARCHAR(10) NOT NULL,
    Theatre_name VARCHAR(255) NOT NULL,
    Location VARCHAR(255) NOT NULL,
    PRIMARY KEY(Theater_ID)
);


// ##Show Table

// # -- Create Show table
CREATE TABLE ShowTable (
    Show_ID INT NOT NULL PRIMARY KEY,
    Show_date VARCHAR(100),
    Show_Time VARCHAR(50)
);


// ##Screen Table

// #-- Create Screen table
CREATE TABLE Screen (
    Screen_ID INT NOT NULL PRIMARY KEY,
    Screen_name VARCHAR(50)
);








